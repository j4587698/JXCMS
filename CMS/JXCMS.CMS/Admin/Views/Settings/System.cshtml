@{
    ViewBag.Title = "系统设置";
}

@using JXCMS.CMS.Entity
@{
    List<SettingsEntity> settings = ViewBag.settings;
}
<div class="container-fluid p-t-15">

    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <ul class="nav nav-tabs page-tabs">
                    <li> <a href="@Url.Action("Index")">基本</a> </li>
                    <li class="active"> <a href="#">系统</a> </li>
                    <li> <a href="lyear_pages_config_upload.html">上传</a> </li>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane active">

                        <form action="#!" method="post" name="edit-form" class="edit-form">
                            <div class="form-group">
                                <label for="theme_type">主题类型</label>
                                <select id="theme_type" class="form-control" name="theme_type" size="1">
                                        <option value="0">只有PC版</option>
                                        <option value="1">自适应</option>
                                        <option value="2">域名切换</option>
                                        <option value="3">自动切换</option>
                                    </select>
                                <small class="help-block">调用方式：<code>config('web_site_title')</code></small>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary m-r-5">确 定</button>
                                <button type="button" class="btn btn-default" onclick="javascript:history.back(-1);return false;">返 回</button>
                            </div>
                        </form>

                    </div>
                </div>

            </div>
        </div>

    </div>

</div>
